{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard", "standard-jsx", "standard-react", "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "no-shadow": "warn",
    "react/prop-types": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}