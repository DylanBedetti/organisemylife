{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard", "standard-jsx", "standard-react", "plugin:cypress/recommended"
    // "plugin:jest/recommended",
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    // "jest",
    "cypress"
  ],
  "rules": {
    "no-shadow": "off",
    "react/prop-types": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "cypress/no-unnecessary-waiting": "off",
    "no-unused-expressions": "warn"
  }
}